<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>

    <div class="main">
        <table class="table">
            <thead>
                <tr>
                    <th>Product name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% 
                    let total = 0;
                    carts.forEach(c =>{  
                %> 
                    <tr>
                        <td> <%- c.name %>  </td>
                        <td> <%- c.quantity %>  </td>
                        <td> <%- c.price %>  </td>
                    </tr>
                <% 
                        total += c.quantity*c.price; 
                    }); 
                %> 
            </tbody>
        </table>
        <h4>Total price: <span id="price"><%- total %></span>,00$</h4>
        <a href="javascript:void(0)" class="btn btn-primary" id="payment">Payment</a><br>
        <button id="connMM">Connect Metamask</button>
        <p><span>your wallet: </span><span id="wallet"></span></p>
    </div>


    <footer>
        <%- include('../partials/footer') %>
    </footer>

    <%- include('../partials/foot') %>
</body>

</html>